{
    "key": "risk-evader-app",
    "name": "RiskEvader",
    "description": "",
    "baseUrl": "https://b573d5a835d2.ngrok.io",
    "authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        "installed": "/installed"
    },
    "scopes": [
        "READ"
    ],
    "links": {
        "postInstallUrl": "/hello-world",
        "postUpdateUrl": "/hello-world"
    },
    "modules": {
        "jiraIssueGlances": [
            {
              "conditions": [
                {
                    "condition": "user_is_logged_in"
                },
                {
                    "condition": "servicedesk.is_agent"
                },
                {
                    "condition": "jira_expression",
                    "params": {
                        "expression": "issue.issueType.name.toLowerCase().includes('change')"
                    }
                    
                }
              ],
              "icon": {
                "width": 0,
                "height": 0,
                "url": "my_icon.svg"
              },
              "content": {
                "type": "label",
                "label": {
                  "value": "View Risk"
                }
              },
              "target": {
                "type": "web_panel",
                "url": "/issue-glance-panel?issueKey={issue.key}&project={project.key}"
              },
              "name": {
                "value": "Risk Management Assistant"
              },
              "key": "my-issue-glance"
            }
		  ],
        "webPanels": [
            {
                "name": {
                    "value": "Change Management Risk Assessment"
                },
                "url": "/issue-glance-panel",
                "location": "atl.jira.view.issue.right.context",
                "layout": {
                    "width": "100%",
                    "height": "100%"
                },
                "key": "issue-glance-panel"
            }
        ],
        "generalPages": [
        ],
        "adminPages": [
           
        ],
        "configurePage": {
			"name": { 
                "value": "Add-on Configuration"
            },
            "key": "configure",
            "url": "/configure",
            "location": "system.admin/globalsettings"
        },
        "jiraProjectAdminTabPanels": [

        ],
        "jiraProfileTabPanels": [

        ],
        "jiraSearchRequestViews": [

        ],
        "webhooks": [

        ]
    }
}
